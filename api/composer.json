{
  "name": "postsms/boilerplate",
  "type": "project",
  "license": "BSD-3-Clause",
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "require": {
    "php": "^7.4",
    "ext-json": "^7.4",
    "doctrine/migrations": "^3.0",
    "doctrine/orm": "^2.7",
    "laminas/laminas-config-aggregator": "^1.2",
    "monolog/monolog": "^2.1",
    "php-di/php-di": "^6.0",
    "postsms/doctrine": "^1.0",
    "postsms/enum": "^1.0",
    "postsms/fields": "^4.0",
    "postsms/foundation": "^1.0",
    "sentry/sdk": "^2.1",
    "slim/psr7": "^1.0",
    "slim/slim": "^4.3",
    "symfony/config": "^5.0",
    "symfony/console": "^5.0",
    "webmozart/assert": "^1.6"
  },
  "require-dev": {
    "dms/phpunit-arraysubset-asserts": "^0.2.0",
    "doctrine/data-fixtures": "^1.4",
    "overtrue/phplint": "^2.0",
    "phpunit/phpunit": "^9.2",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.5",
    "vimeo/psalm": "^3.8"
  },
  "autoload": {
    "psr-4": {
      "App\\": "./src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Test\\": "./tests/"
    }
  },
  "scripts": {
    "lint": "phplint",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "psalm": "psalm",
    "test": "phpunit --colors=always",
    "test-coverage": "phpunit --colors=always --coverage-html var/coverage",
    "app": "php bin/app.php --ansi"
  },
  "repositories": [{
    "type": "vcs",
    "url": "git@github.com:postsms/fields.git"
  }, {
    "type": "vcs",
    "url": "git@github.com:postsms/enum.git"
  }, {
    "type": "vcs",
    "url": "git@github.com:postsms/doctrine.git"
  }, {
    "type": "vcs",
    "url": "git@github.com:postsms/foundation.git"
  }]
}
